<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.miguel.openhousemadrid.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewInfor"
        android:layout_gravity="right"
        android:src="@drawable/ic_info_outline_black_24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="161dp"
        android:id="@+id/imageViewLogo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/openhouselogo1" />

    <GridLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewMap"
            android:src="@drawable/mapa"
            android:adjustViewBounds="false"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:onClick="openMap" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewEdif"
            android:src="@drawable/edificios"
            android:layout_columnWeight="1"
            android:adjustViewBounds="false"
            android:onClick="openEdif"
            android:layout_column="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mapa"
            android:id="@+id/maintextViewMap"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:onClick="openMap"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edificios"
            android:id="@+id/maintextViewEdif"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:onClick="openEdif"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewInfo"
            android:src="@drawable/news"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewFav"
            android:src="@drawable/fav"
            android:onClick="openFav"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Noticias"
            android:id="@+id/maintextViewInfo"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Favoritos"
            android:id="@+id/maintextViewFav"
            android:onClick="openFav"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:src="@drawable/twitter"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal|bottom|right" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView3"
            android:layout_columnWeight="1"
            android:src="@drawable/insta"
            android:layout_gravity="center_horizontal|bottom" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView4"
            android:src="@drawable/face"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal|bottom|left" />
    </GridLayout>

</LinearLayout>
